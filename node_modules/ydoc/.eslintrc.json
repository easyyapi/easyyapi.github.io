{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "indent": ["error", 2],
        "comma-dangle": ["error", "never"],
        "no-console": ["off"],
        "spaced-comment": [2],
        "no-trailing-spaces": [2],
        "no-spaced-func": 2,
        "comma-spacing": 0,
        "space-before-blocks": [
            0,
            "always"
        ]
    }
}